{
  "manifest_version": 3,
  "name": "Filter XOXO_TwinstpVer",
  "description": "A Chrome extension that filters xoxo posts.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "version": "1.0",
  "action": {
    "default_popup": "options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.xoxohth.com/*",
        "https://xoxohth.com/*",
        "http://xoxohth.com/*",
        "http://www.xoxohth.com/*",
        "https://*.xoxohth.com/*",
        "http://*.xoxohth.com/*",
        "https://www.autoadmit.com/*",
        "https://autoadmit.com/*",
        "http://autoadmit.com/*",
        "http://www.autoadmit.com/*"
      ],
      "js": ["crypto-js.min.js", "content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"]
    }
  ]
}