#!/usr/bin/fish

# Create the src directory and subdirectories
mkdir -p src/background src/content src/options

# Move files to the appropriate directories
mv background.js src/background/background.js
mv content.js src/content/content.js
mv crypto-js.min.js src/content/crypto-js.min.js
mv options.html src/options/options.html
mv options.js src/options/options.js
mv options.css src/options/options.css

# Move the manifest.json to the src directory
mv manifest.json src/manifest.json

# Print the resulting directory structure
echo "Resulting directory structure:"
tree src